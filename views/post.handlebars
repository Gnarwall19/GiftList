<script type="text/javascript">

	$("#submit").on("click", function (event) {
		event.preventDefault();

		var newGift = {
			itemTitle: $("#itemTitle").val().trim(),
			location: $("#location").val().trim(),
			category: $("#category").val().trim(),
			contact: $("#contact").val().trim(),
			description: $("#description").val().trim(),
			upload: $("#upload").val().trim()
		};
		console.log(newGift);
		$.ajax({
			method: "POST",
			url: "/gift",
			dataType: "json",
			data: newGift
		}).done(function (result) {
			//response of post result comes from res.json({result})
			console.log("response: " + result);
			var form = document.getElementById("post-form");
			form.reset();

			$("#main").prepend(`<div class="alert alert-success" role="alert">
					Welcome to GiftList! You can now message others about what they're giving away, as well as post your own things, <a href="/" class="alert-link">Start Browsing</a>
					</div>`)
		});
	});


</script>